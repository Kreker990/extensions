{
    "name": "QR Result",
    "description": "QR Result: QR code scanner on the website",
    "version": "1.0.0",
    "manifest_version": 3,
    "icons": {
        "16": "assets/logo.png",
        "32": "assets/logo.png",
        "48": "assets/logo.png",
        "128": "assets/logo.png"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "cookies",
        "clipboardWrite",
        "notifications",
        "declarativeNetRequest"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "disable-csp",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "./popup/popup.html",
        "default_title": "QR Result",
        "default_icon": {
            "16": "assets/logo.png",
            "32": "assets/logo.png",
            "64": "assets/logo.png"
        }
    }
}